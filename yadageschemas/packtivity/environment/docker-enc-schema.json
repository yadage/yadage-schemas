{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "type": "object",
  "title": "Docker Encapsulated Environment",
  "additionalProperties": false,
  "properties": {
    "environment_type": {
      "type": "string",
      "enum":["docker-encapsulated"],
      "default":"docker-encapsulated"
    },
    "image": {
      "type": "string",
      "title": "Image"
    },
    "imagetag": {
      "type": "string",
      "title": "Tag",
      "default":"latest"
   },
    "resources": {
      "type": "array",
      "title": "Resources",
      "default":[]
    },
    "envscript": {
      "type": "string",
      "title": "Env Script",
      "default":""
    },
    "env": {
      "type": "object",
      "title": "Env Vars",
      "properties": {},
      "default":{}
    },
    "workdir": {
      "oneOf":[
        {"type": "string"},
        {"type": "null"}
      ],
      "title": "Work Directory",
      "default": null
    },
    "par_mounts": {
      "type": "array",
      "title": "Parameter Mounts",
      "items": {
        "type": "object",
        "properties": {
          "jqscript": {"type": "string"},
          "mountpath": {"type": "string"}
        }
      },
      "default": []
    }
  },
  "required": [
    "environment_type",
    "image"
  ]
}
