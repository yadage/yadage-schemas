{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "type": "object",
  "title": "YAML Publisher",
  "additionalProperties": false,
  "properties": {
    "publisher_type": {
      "type": "string",
      "enum": ["fromyaml-pub"],
      "default": "fromyaml-pub"
    },
    "yamlfile": {
      "title": "YAML file",
      "type": "string"
    }
  },
  "required": [
    "publisher_type",
    "yamlfile"
  ]
}