{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "type": "object",
  "title": "Simple Interpolated Publisher",
  "additionalProperties": false,
  "properties": {
    "publisher_type": {
      "type": "string",
      "enum": [
        "interpolated-pub"
      ]
    },
    "publish": {
      "oneOf": [
        {"type": "object"},
        {"type": "array"},
        {"type": "string"},
        {"type": "boolean"},
        {"type": "number"}
      ]
    },
    "glob": {
      "type": "boolean",
      "default": false
    },
    "relative_paths": {
      "type": "boolean",
      "default": false
    }
  },
  "required": [
    "publisher_type",
    "publish"
  ]
}
